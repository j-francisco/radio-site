                        <div id="cstrdiv"></div>
                    </div>
                </div>
            </div>
            
        </div>
    </section>
      

    <!-- ******ABOUT****** --> 
    <section id="about" class="about section">
        <div class="container">
            <h2 class="title text-center">Contact</h2>
            <p class="intro text-center">Tony Francisco</p>
            <p class="intro text-center">evora55@hotmail.com</p>
        </div>
    </section> 
    
</body>
</html> 


